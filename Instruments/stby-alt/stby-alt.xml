<!--
777-200 Standby Altimeter 
-->

<PropertyList>
 <path>stby-alt.ac</path>

<animation>
<type>material</type> 
<object-name>StbyAlt</object-name>
<object-name>StbyAsi.knob.001</object-name>
<emission>
    <red>0.1</red>
    <green>0.1</green>
    <blue>0.1</blue>
	    <factor-prop>/controls/lighting/panel-norm[0]</factor-prop>
 </emission>
</animation>

 <animation>
   <type>select</type>
   <condition>
   <equals>
    <property>sim/current-view/view-number</property>
    <value>0</value>
   </equals>
  </condition>
 </animation>

 <animation>
	 <type>select</type>
	 <object-name>StbyAltbackground</object-name>
	 <condition>
		 <and>
			 <equals>
				 <property>sim/current-view/view-number</property>
				 <value>0</value>
			 </equals>
			 <less-than>
				 <property>/systems/electrical/volts</property>
				 <value>12</value>
			 </less-than>
		 </and>
	 </condition>
 </animation>
 
 <animation>
 <type>material</type>
 <object-name>StbyAlt</object-name>
 <!--condition>
 <greater-than>
   <property>/systems/electrical/volts</property>
   <value>12</value>
 </greater-than>
 </condition-->
 <emission>
	 <red>0.3</red>
	 <green>0.25</green>
	 <blue>0.2</blue>
	 <factor-prop>/controls/switches/map-lights</factor-prop>	
 </emission>
 </animation>
 
 <animation>
   <type>textranslate</type>
   <object-name>atxt10000</object-name>
   <property>/instrumentation/altimeter/indicated-altitude-ft</property>
   <factor>0.00001</factor>
   <step>10000</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>atxt1000</object-name>
   <property>/instrumentation/altimeter/indicated-altitude-ft</property>
   <factor>0.0001</factor>
   <step>1000</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>atxt100</object-name>
   <property>/instrumentation/altimeter/indicated-altitude-ft</property>
   <factor>0.001</factor>
   <step>100</step>
