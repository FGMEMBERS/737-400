 </animation>

  <animation>
   <type>rotate</type>
   <object-name>StbyAltneedle</object-name>
   <property>/instrumentation/altimeter/indicated-altitude-ft</property>
   <factor>0.36</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0</y-m>
   <z-m>0.001</z-m>
  </center>
   <axis>
     <x>-1</x>
     <y>0</y>
     <z>0</z>
   </axis>
 </animation>

</PropertyList>
