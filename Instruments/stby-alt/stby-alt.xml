  <animation>
   <type>textranslate</type>
   <object-name>kpa1000</object-name>
   <property>/instrumentation/efis/kpa</property>
   <factor>0.0001</factor>
   <step>1000</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
   <type>textranslate</type>
   <object-name>kpa100</object-name>
   <property>/instrumentation/efis/kpa</property>
   <factor>0.001</factor>
   <step>100</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

  <animation>
