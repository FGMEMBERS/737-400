<?xml version="1.0"?>
<PropertyList>

<path>ai.ac</path>

<animation>
        <type>material</type>
        <object-name>wings_ai</object-name>
        <object-name>ball_ai</object-name>
        <object-name>rollindex_ai</object-name>
        <object-name>riminside</object-name>
        <object-name>rollarrow_ai</object-name>
 <emission>
	 <red>0.3</red>
	 <green>0.25</green>
	 <blue>0.2</blue>
	 <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>	
 </emission>
</animation>

<animation>
<type>material</type> 
<object-name>bezel</object-name>
<object-name>bigknob</object-name>
<object-name>knob</object-name>
<emission>
    <red>0.1</red>
    <green>0.1</green>
    <blue>0.1</blue>
	    <factor-prop>/controls/lighting/panel-norm[0]</factor-prop>
 </emission>
</animation>

	<animation>
		<type>rotate</type>
		<object-name>ball_ai</object-name>
		<property>/orientation/roll-deg</property>
		<center>
			<x-m>-0.031</x-m>
			<y-m>0</y-m>
			<z-m>-0.003</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>ball_ai</object-name>
		<property>/orientation/pitch-deg</property>
		<center>
			<x-m>-0.031</x-m>
			<y-m>0</y-m>
			<z-m>-0.003</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>rollarrow_ai</object-name>
		<property>/orientation/roll-deg</property>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

 <animation>
  <type>translate</type>
  <object-name>wings_ai</object-name>
  <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
  <factor>0.001</factor>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>
    
</PropertyList>
