<?xml version="1.0"?>
<PropertyList>

 <path>gear.ac</path>

<animation>
<type>material</type>
<object-name>gear</object-name>
<object-name>GearLever</object-name>
<object-name>GearLever2</object-name>
<emission>
    <red>0.3</red>
    <green>0.25</green>
    <blue>0.2</blue>
<factor-prop>controls/lighting/panel-norm</factor-prop>
 </emission>
</animation>

<animation>
  <type>select</type>
  <object-name>GearLever2</object-name>
   <condition>
    <equals>
     <property>controls/gear/gear-off</property>
     <value>true</value>
    </equals>
   </condition>
 </animation>

<animation>
  <type>select</type>
  <object-name>GearLever</object-name>
   <condition>
    <equals>
     <property>controls/gear/gear-off</property>
     <value>false</value>
    </equals>
   </condition>
 </animation>

<animation>
  <type>rotate</type>
  <object-name>GearLever</object-name>
  <property>/controls/gear/gear-down</property>
  <factor>5</factor>
  <center>
   <x-m>-8.0</x-m>
   <y-m>-16.0</y-m>
   <z-m>0.8</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

</PropertyList>
