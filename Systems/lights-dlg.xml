<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

	<name>lights-dlg</name>
	<layout>vbox</layout>

	<text>
		<label>737-400 Light Controller</label>
	</text>

	<hrule />

	<group>
		<layout>vbox</layout>

		<text>
			<label>Landing lights</label>
		</text>

		<group>
			<layout>hbox</layout>

			<checkbox>
				<label>Left</label>
				<property>controls/lighting/landing-lights</property>
				<binding>
					<command>dialog-apply</command>
				</binding>
				<live>true</live>
			</checkbox>

			<checkbox>
				<label>Right</label>
				<property>controls/lighting/landing-lights</property>
				<binding>
					<command>dialog-apply</command>
				</binding>
				<live>true</live>
			</checkbox>
		</group>

		<hrule/>

		<checkbox>
			<label>Navigation lights</label>
			<property>controls/lighting/nav-lights</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>

		<checkbox>
			<label>Strobe lights</label>
			<property>controls/lighting/strobe</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>

		<checkbox>
			<label>Beacon</label>
			<property>controls/lighting/beacon</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>
              
                <checkbox>
				<halign>left</halign>
				<label>Panel norm</label>
				<property>/controls/lighting/panel-lights</property>
				<binding>
					<command>property-toggle</command>
					<property>/controls/lighting/panel-lights</property>
				</binding>
				<binding>
					<command>property-toggle</command>
					<property>/sim/sound/switch</property>
				</binding>
			</checkbox>
		
			<text>
				<label>Panel norm</label>
			</text>
			<slider>
				<row>0</row>
				<col>2</col>
				<min>0.2</min>
				<max>1.0</max>
				<property>/controls/lighting/panel-norm</property>
				<binding>
					<command>dialog-apply</command>
				</binding>
			</slider>
		


